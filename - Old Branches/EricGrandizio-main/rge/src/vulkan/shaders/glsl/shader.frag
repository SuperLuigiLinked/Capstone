#version 450

// ================================================================================================================================ //

/// Input RGBA values.
layout(location = 0) in vec4 in_RGBA;

// -------------------------------------------------------------------------------------------------------------------------------- //

/// Output RGBA values.
layout(location = 0) out vec4 out_RGBA;

// ================================================================================================================================ //

/// Fragment Shader entry-point.
void main()
{
    // Pass-through the Color Values. They will be interpolated between each point.
    out_RGBA = in_RGBA;
}

